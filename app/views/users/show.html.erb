<% if @user.tweets.count != 0 %>
    <div class="main">
        <% @user.tweets.each do |tweet| %>
            <%= link_to tweet_path(tweet) do %>
                <div class="card tweet">
                    <div class="d-flex">
                        <p class="pict">
                            <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60" %>
                        </p>
                        <p class="name"><%= @user.name %></p>
                        <div class="ml-auto p-3">
                            <p>コメント<%= tweet.comments.count %>件</p>
                            <% d2 = Date.parse(tweet.created_at.to_s) %>
                            <p><%= d2 %></p>
                        </div>
                    </div>
                    <p class="card-body context"><%= tweet.context %></p>
                </div>
            <% end %>
        <% end %>
    </div>
<% else %>
    <div class="no-tweet">
        <p>投稿してみよう</p>
    </div>
<% end %>
<div class="side">
    <div>
        <p class="pict">
            <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60" %>
        </p>
        <p class="name"><%= @user.name %></p>
        <% if current_user.id == @user.id %>
            <%= link_to 'User Edit', edit_user_path(current_user) %>
        <% end %>
        <p class="card-body context"><%= @user.introduction %></p>
    </div>
</div>