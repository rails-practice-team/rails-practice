<h1>edit page</h1>

<%= form_with model: @user, url: user_path(current_user), local: true do |f| %>

  <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>

  <%= f.submit %>
<% end %>