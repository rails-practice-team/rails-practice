<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'none' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'none' %>
  </head>

  <body>
    <div>
      <header class="navbar-nav">
        <div class="d-flex justify-content-around nav-box align-items-center">
          <% if user_signed_in? %>
            <p><%= link_to "マイページ", user_path(current_user), class: "btn btn-default" %></p>
            <p><%= link_to "Tweet", tweets_path, class: "btn btn-default" %></p>
            <p><%= link_to "ユーザー", users_path, class: "btn btn-default" %></p>
            <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-default" %></p>
          <% else %>
            <p><%= link_to "トップ", root_path, class: "btn btn-default" %></p>
            <p><%= link_to "Tweet", tweets_path, class: "btn btn-default" %></p>
            <p><%= link_to "ログイン", new_user_session_path, class: "btn btn-default" %></p>
            <p><%= link_to "登録", new_user_registration_path, class: "btn btn-default" %></p>
          <% end %>
        </div>
      </header>
      <div class="d-flex outline">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
