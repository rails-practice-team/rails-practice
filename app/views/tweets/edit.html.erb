<div class="comment-views">
    <%= form_with(model: @tweet, local: true) do |f| %>
        <p>ツイート</p>
        <p><%= f.text_area :context, class: "input-area", rows: "4" %></p>
        <p><%= f.submit "ツイート更新", class:"btn btn-primary" %></p>
    <% end %>
    <p class="p-1"><%= link_to "ツイート削除", tweet_path(@tweet), method: :delete %></p>
</div>